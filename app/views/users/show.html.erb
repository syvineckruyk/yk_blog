<hr> 
<div id="user_badge">
  <div id="user_badge_gravatar">
  	<%= gravatar_for @user %>
  </div>
  <div id="user_badge_details">
  	<%=h @user.name %>
  	<%=h mail_to @user.email %>
  </div>
  <div id="user_header_right_qr">
  	<%= link_to qrcode(user_url(@user), 2, 4, 'my-qrcode'),user_url(@user) %>
  </div>	 
  <div id="user_header_hr">
  	<hr>
  </div>
</div>
<div id="user_show_navigation">
<%= link_to image_tag("arrow-left-2.png", :alt => "back"), users_path %> 
<%= link_to image_tag("edit.png", :alt => "edit"), edit_user_path(@user) %>
</div>
<div id="post_footer">	
  <h6>record last updated: <%= @user.updated_at %></h6>
</div>
