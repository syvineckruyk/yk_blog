<%= stylesheet_link_tag 'posts_index', :media => 'screen' %>

<!--BEGIN POSTS INLINE NAVIGATION BAR-->
<div class="posts_inline_nav_bar">
	<%= link_to 'new post', new_post_path,:class => 'button small orange' %>
</div>
<!--END POSTS INLINE NAVIGATION PAR-->

<!--BEGIN TAG BOX ON RIGHT HAND SIDE-->
<div id="tag_box">
<div id="tag_box_background">
</div>
	<div id="tag_box_header">
	<p>tags</p>
	</div>
	<div id="tag_box_tags">
	<% @tag_box_tags = Tag.find(:all) %>
	<% @tag_box_tags.each do |tag| %>
		<%= link_to tag.name %>
	<% end %>
	</div>
</div>
<!--END TAG BOX ON RIGHT HAND SIDE-->



<!--BEGIN POSTS LIST INDEX-->
<% @posts.each do |post| %>
<div id="list_post">
<% link_to post do %>
  <div id="list_post_background">
  </div>
  <div id="list_post_gravatar">
  	<% link_to post_path(post) do %>
	<%= image_tag post.image.url(:thumb) %>
  	<% end %>
  </div>
  <div id="list_post_title">
  	<h4 class="list_post_title" id="list_post_title_text"><%=h post.title %><br></h4>
  </div> 
  <div id="list_post_body">
	<%=h post.subject %><br>
  	<span class="post_created"><%= time_ago_in_words(post.created_at) %> ago</span>
	<iframe src="http://www.facebook.com/plugins/comments.php?href=<%=h post_url(post) %>&permalink=1" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:400px; height:16px;" allowTransparency="true"></iframe>
<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href=<%=h post_url(post)%> layout="button_count" show_faces="true" font=""></fb:like> 
  </div>
	<div id="list_post_tags">
		<% @tags = post.tag_list %>
		<p id="post_tag_links">
		<% @tags.each do |tag| %>
		<%= link_to tag  %>
		<%end%>
		</p>
	</div>
	
	<!--div id="list_post_actions">
    	<%= link_to 'Show', post %>
    	<%= link_to 'Edit', edit_post_path(post) %>
	<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
	</div>-->

<% end %>
</div>
<%end %>
<!--END POSTS LIST INDEX-->
<br />
