<div id="show_post">
<div id="show_post_title" class="title">
<%=h @post.title %><fb:like href=<%=h post_url(@post)%> layout="button_count" show_faces="true" font=""></fb:like>
<span class="posts_inline_nav_bar_left">
	<%= link_to 'Edit', edit_post_path(@post),:class => 'button small orange'  %>
	<%= link_to 'Back', posts_path,:class => 'button small orange'  %> 
</span>
</div>
<div id="show_post_bg_image">
<%= image_tag @post.image.url(:post_image_box) %>
<div id="sharethis" >
<span class="st_email"></span><span class="st_facebook"></span><span class="st_twitter"></span><span class="st_sharethis" displayText="ShareThis"></span>
</div>
<div id="tag_box">
<div id="tag_box_background">
</div>
	<div id="tag_box_header">
	<p>tags</p>
	</div>
	<div id="tag_box_tags">
	<% @tag_box_tags = @post.tags.find(:all) %>
	<% @tag_box_tags.each do |tag| %>
		<%= link_to tag.name %>
	<% end %>
	</div>
</div>
</div>
<div id="post_show_header">
<div id="post_show_header_background"></div>
	 <div id="show_post_gravatar">
  	<% link_to user_path(@post.user) do %>
  	<%= gravatar_for @post.user %>
  	<% end %>
	</div>
<span class="post_created">posted <%= time_ago_in_words(@post.created_at) %> ago</span>
<p><i><%=h @post.subject %></i></p>
<!--<%= facebook_like %>-->
<fb:like href=<%=h post_url(@post)%> layout="button_count" show_faces="true" font=""></fb:like>
