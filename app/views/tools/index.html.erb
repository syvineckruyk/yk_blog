<h1>Listing tools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Developer</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Url</th>
    <th>User</th>
    <th>Post</th>
  </tr>

<% @tools.each do |tool| %>
  <tr>
    <td><%=h tool.name %></td>
    <td><%=h tool.developer %></td>
    <td><%=h tool.description %></td>
    <td><%=h tool.rating %></td>
    <td><%=h tool.url %></td>
    <td><%=h tool.user_id %></td>
    <td><%=h tool.post_id %></td>
    <td><%= link_to 'Show', tool %></td>
    <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
    <td><%= link_to 'Destroy', tool, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tool', new_tool_path %>